# Tank World - Production Environment Variables
# Copy this file to .env and modify as needed

# =============================================================================
# Server Identity
# =============================================================================
TANK_SERVER_ID=oracle-tankworld
TANK_API_PORT=8000

# =============================================================================
# Production Mode
# =============================================================================
# Set to "true" in production for security hardening
PRODUCTION=true

# =============================================================================
# CORS Settings
# =============================================================================
# Comma-separated list of allowed origins (your frontend domains)
# Example: https://yourdomain.com,https://www.yourdomain.com
ALLOWED_ORIGINS=*

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60

# IP addresses that bypass rate limiting (comma-separated)
IP_WHITELIST=127.0.0.1,::1

# =============================================================================
# Discovery Hub (Optional - for distributed servers)
# =============================================================================
# URL of a remote discovery hub to register with
# Example: http://192.168.1.10:8000
# DISCOVERY_SERVER_URL=

# =============================================================================
# Logging
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# =============================================================================
# Evolution Benchmarking
# =============================================================================
# Enabled by default; set to "0" to disable.
TANK_EVOLUTION_BENCHMARK_ENABLED=1

# =============================================================================
# Migration Selection
# =============================================================================
# Optional override to make migration destination selection deterministic when
# no world/engine seed is available.
# MIGRATION_SELECTION_SEED=0
